#include "ros/ros.h"
#include "std_msgs/String.h"
#include "geometry_msgs/Twist.h"
#include <sstream>
#include <time.h>


int main(int argc, char **argv)
{
  
  ros::init(argc, argv, "turtlemover");
  ros::NodeHandle n;

 
  ros::Publisher chatter_pub = n.advertise<geometry_msgs::Twist>("/cmd_vel_mux/input/teleop", 1000);

  ros::Rate loop_rate(10);

  geometry_msgs::Twist msg;
  /*første strækning på 153,7 cm*/
  msg.linear.x = 0.7;
  for (size_t i = 0; i < 24; i++)
  {
    chatter_pub.publish(msg);
      loop_rate.sleep();
  }
  /*første drej på 13,9 grader(venstre)*/
  msg.angular.z = -0.24;
  msg.linear.x = 0.7;
  for (size_t i = 0; i < 20; i++)
  {
    chatter_pub.publish(msg);
      loop_rate.sleep();
  }
  /*anden strækning på 261 cm*/
  msg.linear.x = 0.7;
  for (size_t i = 0; i < 50; i++)
  {
    chatter_pub.publish(msg);
      loop_rate.sleep();
  }
/*andet drej på 18,8 grader(højre)*/
  msg.angular.z = 0.33;
  msg.linear.x = 0.7;
  for (size_t i = 0; i < 20; i++)
  {
    chatter_pub.publish(msg);
      loop_rate.sleep();
  }
/*slutspurten antal cm ikke kendt*/
  msg.linear.x = 0.7;
  for (size_t i = 0; i < 30; i++)
  {
    chatter_pub.publish(msg);
      loop_rate.sleep();
  }

  while (ros::ok())
  {
    geometry_msgs::Twist msg;

  
    chatter_pub.publish(msg);

    ros::spinOnce();

    loop_rate.sleep();
 
  }

  return 0;
}
